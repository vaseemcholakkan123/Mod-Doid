

<script>

    function categoryfun(){

      let currCATEGORY = document.getElementById('fetchCat').textContent
      console.log(currCATEGORY)
      
      document.getElementById('cat').style.display= "block"

        if(document.getElementById('exampleRadios1').value == currCATEGORY){
          document.getElementById('exampleRadios1').checked = true
